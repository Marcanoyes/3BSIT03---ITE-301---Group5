<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buddy">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buddy">
        <activity android:name=".CreateAccount"></activity>
        <activity android:name=".Support" />
        <activity android:name=".Schedule" />
        <activity android:name=".Calendar" />
        <activity android:name=".NotifMessage" />
        <activity android:name=".Reminders.DetailsRem" />
        <activity android:name=".Reminders.AddReminders" />
        <activity android:name=".Reminders.Reminders" />
        <activity
            android:name=".Notes.AddNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.Buddy.NoActionBar" />
        <activity
            android:name=".Notes.Details"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.Buddy.NoActionBar" />
        <activity android:name=".Login.Login" />
        <activity android:name=".SplashScreen.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Notes.MainActivity"></activity>

        <receiver android:name=".Alarmbot" />
    </application>

</manifest>